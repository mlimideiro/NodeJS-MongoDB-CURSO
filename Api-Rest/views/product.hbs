<script type="text/javascript">
    let productList = document.createElement('ul')

    const myHeaders = new Headers();
    myHeaders.append('authorization', `Bearer ${localStorage.token}`) //AÃ‘ADE CABECERA QUE SE LLAMA authorization

    fetch('/api/product', {
        method: 'GET',
        headers: myHeaders
    })
    .then(res => res.json()) //PROMESA DE RESPUESTA QUE PASA A FORMATO JSON
    .then(data => {
        data.product.map(product => {
            let text = document.createTextNode(product.name)
            let elem = document.createElement('li')
            elem.appendChild(text)
            productList.appendChild(elem)
        })
        document.body.appendChild(productList)
    }) 
</script>